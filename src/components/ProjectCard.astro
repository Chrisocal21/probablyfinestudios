---
interface Props {
	title: string;
	description: string;
	image: string;
	tags: string[];
	liveUrl?: string;
	githubUrl?: string;
	collaborators?: Array<{ name: string; url: string }>;
}

const { title, description, image, tags, liveUrl, githubUrl, collaborators } = Astro.props;
---

<div class="bg-gray-900 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 border border-gray-800">
	<div class="aspect-video bg-gradient-to-br from-indigo-500 to-purple-600 relative overflow-hidden">
		<img src={image} alt={title} class="w-full h-full object-cover" />
	</div>
	<div class="p-6">
		<h3 class="text-2xl font-bold mb-2 text-white">{title}</h3>
		<p class="text-gray-300 mb-4">{description}</p>
		
		<div class="flex flex-wrap gap-2 mb-4">
			{tags.map(tag => (
				<span class="bg-indigo-100 text-indigo-700 px-3 py-1 rounded-full text-sm">
					{tag}
				</span>
			))}
		</div>

		{collaborators && collaborators.length > 0 && (
			<div class="mb-4">
				<p class="text-sm text-gray-500 mb-2">Collaborators:</p>
				<div class="flex flex-wrap gap-2">
					{collaborators.map(collab => (
						<a 
							href={collab.url} 
							target="_blank" 
							rel="noopener noreferrer"
							class="text-sm text-indigo-600 hover:text-indigo-800 hover:underline"
						>
							{collab.name}
						</a>
					))}
				</div>
			</div>
		)}

		<div class="flex gap-3">
			{liveUrl && (
				<a 
					href={liveUrl} 
					target="_blank" 
					rel="noopener noreferrer"
					class="bg-white text-black px-4 py-2 rounded-lg hover:bg-gray-200 transition"
				>
					View Live
				</a>
			)}
			{githubUrl && (
				<a 
					href={githubUrl} 
					target="_blank" 
					rel="noopener noreferrer"
					class="border border-gray-600 text-gray-300 px-4 py-2 rounded-lg hover:bg-gray-800 transition"
				>
					GitHub
				</a>
			)}
		</div>
	</div>
</div>

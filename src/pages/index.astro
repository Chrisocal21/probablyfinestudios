---
import Layout from '../layouts/Layout.astro';
import ProjectSlider from '../components/ProjectSlider.astro';
import Nav from '../components/Nav.astro';
---

<Layout title="Probably Fine Studios - Showcase">
	<!-- Floating Navigation -->
	<div class="fixed top-0 left-0 right-0 z-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
			<div class="flex justify-between items-center">
				<a href="/" class="text-2xl font-bold text-white drop-shadow-lg">
					Probably Fine Studios
				</a>
				<div class="flex gap-6">
					<a 
						href="/portfolio" 
						class="text-white hover:text-indigo-300 transition drop-shadow-lg font-medium"
					>
						All Projects
					</a>
					<a 
						href="/team" 
						class="text-white hover:text-indigo-300 transition drop-shadow-lg font-medium"
					>
						Team
					</a>
					<a 
						href="/contact" 
						class="text-white hover:text-indigo-300 transition drop-shadow-lg font-medium"
					>
						Contact
					</a>
				</div>
			</div>
		</div>
	</div>

	<!-- Full-screen Project Slider -->
	<ProjectSlider />

	<!-- Bottom Info Bar -->
	<div class="fixed bottom-0 left-0 right-0 z-40 bg-black/50 backdrop-blur-sm border-t border-white/10">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
			<div class="flex justify-between items-center text-white text-sm">
				<div>
					<span class="text-gray-400">Use arrow keys or swipe to navigate</span>
				</div>
				<div class="flex gap-6">
					<a 
						href="/about" 
						class="hover:text-indigo-300 transition"
					>
						About Us
					</a>
					<a 
						href="mailto:hello@probablyfinestudios.com" 
						class="hover:text-indigo-300 transition"
					>
						hello@probablyfinestudios.com
					</a>
				</div>
			</div>
		</div>
	</div>
</Layout>
